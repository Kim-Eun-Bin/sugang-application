<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuGangFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFEFF"
        android:elevation="6dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_sugang_major"
            android:layout_weight="1"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전공"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/text_sugang_msc"
            android:layout_weight="1"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MSC"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/text_sugang_super"
            android:layout_weight="1"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전문교양"
            android:textColor="#000"
            android:textSize="20sp"
            />
    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_yet_sugang_list"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:id="@+id/btn_sugang_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:gravity="bottom"
                android:layout_marginRight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="전체 평점"/>
            <TextView
                android:id="@+id/text_sugang_total_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textColor="#000"
                android:text="4.5 / 4.5"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_reset"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="12dp"
            android:textColor="#ff9999"
            android:text="초기화"/>
    </LinearLayout>

    
</LinearLayout>