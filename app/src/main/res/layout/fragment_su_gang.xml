<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuGangFragment"
    android:background="@color/colorBackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="@color/colorDeep"
                android:src="@drawable/ic_personal_video_black_24dp"/>
            <TextView
                android:id="@+id/text_sugang_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공"
                android:textColor="@color/colorGray"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="@color/colorDeep"
                android:src="@drawable/ic_edit_black_24dp"/>
            <TextView
                android:id="@+id/text_sugang_msc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSC"
                android:textColor="@color/colorGray"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="@color/colorDeep"
                android:src="@drawable/ic_import_contacts_black_24dp"/>
            <TextView
                android:id="@+id/text_sugang_super"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전문교양"
                android:textColor="@color/colorGray"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_yet_sugang_list"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBackground"
        android:elevation="6dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:gravity="bottom"
                android:layout_marginRight="6dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="전체 평점"/>
            <TextView
                android:id="@+id/text_sugang_total_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="bottom"
                android:textColor="@color/colorNormal"
                android:text="4.5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="bottom"
                android:textColor="@color/colorDeep"
                android:text=" / 4.5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="10sp"
                android:text="학점을 초기화 하고 싶으면?"/>
            <TextView
                android:id="@+id/text_reset"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:textColor="@color/colorReverse"
                android:text="초기화"/>
        </LinearLayout>

    </LinearLayout>

    
</LinearLayout>