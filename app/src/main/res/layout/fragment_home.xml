<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/calculate_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="종강일 계산"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#FF0000"
            android:gravity = "center_horizontal"/>
        <TextView
            android:id="@+id/start_Day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="개강일 : 2019-09-02 "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/end_Day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="종강일 : 2019-12-20 "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <ProgressBar
            android:id="@+id/main_progress_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
            android:progress="25"/>

        <FrameLayout
            android:id="@+id/eclass_course_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6sp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/course_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/no_course"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록된 강좌가 없습니다."/>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
